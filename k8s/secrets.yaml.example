# Example secrets file - DO NOT commit actual secrets
# Create actual secrets using:
# kubectl create secret generic vericrop-secrets --from-literal=postgres-password=<password> --namespace=vericrop

apiVersion: v1
kind: Secret
metadata:
  name: vericrop-secrets
  namespace: vericrop
type: Opaque
stringData:
  # Database Credentials
  postgres-username: "vericrop_prod"
  postgres-password: "<CHANGE-ME-strong-password>"
  
  # Kafka Credentials (if using SASL)
  kafka-username: "vericrop_kafka"
  kafka-password: "<CHANGE-ME-strong-password>"
  
  # JWT Secret
  jwt-secret: "<CHANGE-ME-generate-with-openssl-rand-base64-32>"
  
  # API Keys (if needed)
  ml-service-api-key: "<CHANGE-ME-api-key>"
