            <ImageView fx:id="imageView" fitHeight="200" fitWidth="200" style="-fx-border-color: #ccc; -fx-border-width: 2; -fx-border-style: dashed;"/>

            <Button fx:id="uploadButton" text="ðŸ“¸ Upload Image" onAction="#handleUploadImage" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>

            <ProgressIndicator fx:id="progressIndicator" visible="false"/>

            <VBox spacing="5">
                <Label fx:id="qualityLabel" text="Quality: --" style="-fx-font-size: 18px;"/>
                <Label fx:id="confidenceLabel" text="Category: --"/>
                <Label fx:id="hashLabel" text="Hash: --" style="-fx-font-family: monospace; -fx-font-size: 10px;"/>
            </VBox>

            <Separator/>

            <Label text="2. Create Blockchain Batch" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>

            <TextField fx:id="batchNameField" promptText="Enter batch name (e.g., Summer_Apples_001)"/>

            <Button fx:id="createBatchButton" text="ðŸ”„ Create Blockchain Record" onAction="#handleCreateBatch" disable="true" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>

            <Button text="ðŸ” Validate Chain" onAction="#handleValidateChain" style="-fx-background-color: #FF9800; -fx-text-fill: white;"/>
        </VBox>

        <!-- Right Panel - Blockchain Display -->
        <VBox spacing="10" VBox.vgrow="ALWAYS">
            <Label text="ðŸ“œ Live Blockchain" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
            <TextArea fx:id="blockchainArea" editable="false" style="-fx-font-family: monospace; -fx-font-size: 12px;" VBox.vgrow="ALWAYS"/>
        </VBox>
    </HBox>

    <!-- Status Bar -->
    <HBox spacing="10" style="-fx-background-color: #e0e0e0; -fx-padding: 10;">
        <Label text="Status:"/>
        <Label text="âœ… Ready" fx:id="statusLabel"/>
        <Label text="| ML Service: http://localhost:8000" style="-fx-text-fill: #666;"/>
    </HBox>
</VBox>