    <HBox spacing="20">
        <!-- Left Panel - Image Upload & Analysis -->
        <VBox spacing="15" style="-fx-background-color: #f5f5f5; -fx-padding: 15; -fx-border-radius: 5; -fx-border-color: #ddd;">
