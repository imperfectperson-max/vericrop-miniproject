<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.vericrop.gui.controller.ContactsViewController"
            stylesheets="@../css/styles.css">

    <!-- Top Bar -->
    <top>
        <VBox spacing="10" style="-fx-background-color: #f8f9fa; -fx-padding: 15;">
            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="ðŸ‘¥ Contacts" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2E8B57;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="onlineCountLabel" text="0 online" 
                       style="-fx-font-size: 12px; -fx-text-fill: #666; -fx-padding: 5 10; -fx-background-color: #e8f5e9; -fx-background-radius: 10;"/>
                <Button text="Refresh" onAction="#handleRefresh" 
                        style="-fx-pref-width: 80px; -fx-pref-height: 32px;"/>
                <Button text="Back" onAction="#handleBack" 
                        style="-fx-pref-width: 80px; -fx-pref-height: 32px;"/>
            </HBox>
        </VBox>
    </top>

    <!-- Main Content -->
    <center>
        <SplitPane dividerPositions="0.35" style="-fx-background-color: white;">
            
            <!-- Contacts List (Left) -->
            <VBox spacing="0" style="-fx-background-color: #f8f9fa;">
                <Label text="Available Contacts" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10; -fx-text-fill: #555;"/>
                <ListView fx:id="contactsListView" style="-fx-background-color: white;">
                    <!-- Custom cell factory will be set in controller -->
                </ListView>
            </VBox>

            <!-- Contact Details & Messaging (Right) -->
            <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: white;">
                
                <!-- Empty State -->
                <VBox fx:id="emptyStatePane" spacing="10" alignment="CENTER" 
                      style="-fx-padding: 50;" managed="true" visible="true">
                    <Label text="ðŸ‘¤" style="-fx-font-size: 48px;"/>
                    <Label text="No contact selected" 
                           style="-fx-font-size: 16px; -fx-text-fill: #666;"/>
                    <Label text="Select a contact from the list to view details and send messages" 
                           style="-fx-font-size: 12px; -fx-text-fill: #999;"/>
                </VBox>

                <!-- Contact Detail Content -->
                <VBox fx:id="contactDetailPane" spacing="15" managed="false" visible="false">
                    
                    <!-- Contact Header -->
                    <VBox spacing="8" style="-fx-padding: 0 0 15 0; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 1 0;">
                        <Label fx:id="contactDisplayName" text="Contact Name" 
                               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="Username:" style="-fx-font-size: 12px; -fx-text-fill: #666; -fx-font-weight: bold;"/>
                            <Label fx:id="contactUsername" text="username" style="-fx-font-size: 12px; -fx-text-fill: #333;"/>
                        </HBox>
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="Role:" style="-fx-font-size: 12px; -fx-text-fill: #666; -fx-font-weight: bold;"/>
                            <Label fx:id="contactRole" text="role" style="-fx-font-size: 12px; -fx-text-fill: #333;"/>
                        </HBox>
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="Status:" style="-fx-font-size: 12px; -fx-text-fill: #666; -fx-font-weight: bold;"/>
                            <Label fx:id="contactStatus" text="status" style="-fx-font-size: 12px; -fx-text-fill: #333;"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label fx:id="contactLastSeen" text="Last seen" style="-fx-font-size: 11px; -fx-text-fill: #999;"/>
                        </HBox>
                    </VBox>

                    <!-- Message History Section -->
                    <VBox spacing="10" VBox.vgrow="ALWAYS">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="ðŸ“ Message History" 
                                   style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #555;"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Button text="Load Messages" onAction="#handleLoadMessages" 
                                    style="-fx-font-size: 11px;"/>
                        </HBox>
                        
                        <!-- Messages List -->
                        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" 
                                   style="-fx-background-color: #f8f9fa; -fx-background-radius: 5;">
                            <VBox fx:id="messagesContainer" spacing="8" style="-fx-padding: 10;">
                                <Label text="No messages yet. Send a message below!" 
                                       style="-fx-font-size: 12px; -fx-text-fill: #999; -fx-padding: 20;"/>
                            </VBox>
                        </ScrollPane>
                    </VBox>

                    <!-- Send Message Section -->
                    <VBox spacing="10" style="-fx-padding: 15 0 0 0; -fx-border-color: #e0e0e0; -fx-border-width: 1 0 0 0;">
                        <Label text="âœ‰ï¸ Send Message" 
                               style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #555;"/>
                        
                        <TextField fx:id="messageSubjectField" promptText="Subject (optional)" 
                                  style="-fx-pref-height: 35px;"/>
                        
                        <TextArea fx:id="messageBodyField" promptText="Type your message here..." 
                                 wrapText="true" style="-fx-pref-height: 100px;"/>
                        
                        <HBox spacing="10" alignment="CENTER_RIGHT">
                            <Button text="Clear" onAction="#handleClearMessage" 
                                    style="-fx-pref-width: 80px;"/>
                            <Button text="Send" styleClass="success-button" onAction="#handleSendMessage" 
                                    style="-fx-pref-width: 100px;"/>
                        </HBox>
                    </VBox>
                </VBox>
            </VBox>
        </SplitPane>
    </center>
</BorderPane>
